{
  "manifest_version": 2,
  "name": "monkey-counter",
  "version": "1.0",

  "icons": {
    "128": ""
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "./dist/index.js" ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "http://losttime.su/*"
  ],

  "browser_action": {
    "default_title": "LostTime",
    "default_icon": "",
    "default_popup": "./src/popup.html"
  }

}
